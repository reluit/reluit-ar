# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Pipedream Connect
PIPEDREAM_CLIENT_ID=your_pipedream_client_id
PIPEDREAM_CLIENT_SECRET=your_pipedream_client_secret
PIPEDREAM_PROJECT_ID=your_pipedream_project_id
PIPEDREAM_PROJECT_SECRET_KEY=your_pipedream_project_secret_key
NEXT_PUBLIC_PIPEDREAM_PROJECT_PUBLIC_KEY=your_pipedream_project_public_key
NEXT_PUBLIC_PIPEDREAM_ENV=development

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key

# Resend (Email Sending)
# Get your API key from https://resend.com
RESEND_API_KEY=your_resend_api_key
# Default sending email - uses Reluit's domain by default
# For production, use collections@reluit.com or your verified domain
RESEND_FROM_EMAIL=collections@reluit.com
# Webhook URL for Resend events (email.sent, email.opened, email.clicked, etc.)
# Configure this in Resend dashboard: https://resend.com/webhooks
# URL format: https://yourdomain.com/api/webhooks/resend

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron Jobs (Vercel)
# Generate a random secret for cron job authentication
# Use: openssl rand -base64 32
CRON_SECRET=your_cron_secret_here

# Stripe (for billing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

